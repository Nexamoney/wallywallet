<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:layout_marginVertical="1dp"
    android:layout_marginHorizontal="4dp"
    >
    <!-- clipChildren allows the account lock icon to overlay rather than be cut off -->

    <ImageView
        android:id="@+id/accountIcon"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:padding="0px"
        android:paddingStart="0px"
        android:paddingLeft="0px"
        android:paddingTop="0px"
        android:paddingEnd="0px"
        android:paddingRight="0px"
        android:paddingBottom="0px"
        android:scaleType="fitXY"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/balanceUnconfirmedValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/balanceValue"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:clickable="true"
        android:gravity="center_vertical|center_horizontal"
        android:text=""
        android:textIsSelectable="true"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="28sp"

        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toEndOf="@+id/balanceTicker"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/balanceUnits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="14sp"
        android:text=""
        android:textIsSelectable="true"
        app:layout_constraintBottom_toBottomOf="@+id/balanceValue"
        app:layout_constraintStart_toEndOf="@+id/balanceValue"
        />
    <!-- Put the balance value before the ticker so that the lock icon will be on top  -->

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/balanceTicker"
        android:layout_width="110sp"
        android:layout_height="40sp"
        android:layout_marginStart="-2dp"
        android:textIsSelectable="true"
        app:layout_constraintStart_toEndOf="@+id/accountIcon"
        app:layout_constraintTop_toTopOf="@+id/balanceValue"
        app:layout_constraintBottom_toBottomOf="@+id/balanceValue"
        app:layout_constraintVertical_bias="0.5"
        >

        <TextView
            android:id="@+id/balanceTickerText"
            android:layout_width="wrap_content"
            android:maxWidth="90sp"
            android:layout_height="fill_parent"
            android:textSize="24sp"
            android:textStyle="bold"
            android:clickable="true"
            android:gravity="center_vertical|center_horizontal"
            android:maxLines="1"
            android:minLines="1"
            android:textAlignment="center"
            android:text=""
            android:textIsSelectable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/lockIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="-4dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:padding="0px"
            android:scaleType="fitXY"
            android:scrollbars="none"
            android:contentDescription="@string/unlock"
            app:layout_constraintStart_toEndOf="@+id/balanceTickerText"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <TextView
        android:id="@+id/balanceUnconfirmedValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:lines="1"
        android:text=""
        android:textIsSelectable="true"
        android:textAlignment="center"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/balanceValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="5"
        android:text=""
        android:textIsSelectable="true"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/balanceUnconfirmedValue" />
    <TextView
        android:id="@+id/devInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="7"
        android:minLines="3"
        android:text=""
        android:textIsSelectable="true"
        android:textAlignment="center"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info" />
    <ImageView
        android:id="@+id/GuiAccountDetailsButton"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="4dp"
        android:scaleType="fitXY"
        android:scrollbars="none"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_gear"
        >
    </ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>