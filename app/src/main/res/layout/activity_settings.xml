<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".settings" android:tooltipText="@string/rediscoverTooltip"
        android:onClick="onRediscoverBlockchain">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enableDeveloperView"
        app:layout_constraintBottom_toBottomOf="@+id/GuiDeveloperView"
        app:layout_constraintStart_toEndOf="@+id/GuiDeveloperView"
        app:layout_constraintTop_toTopOf="@+id/GuiDeveloperView" />

    <TextView
        android:id="@+id/LocalCurrencyText"
        android:layout_width="179dp"
        android:layout_height="28dp"
        android:layout_marginTop="64dp"
        android:text="@string/localCurrency"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/fiatCurrencySpinner"
        android:layout_width="187dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:entries="@array/FiatCurrencyTypes"
        app:layout_constraintBottom_toBottomOf="@+id/LocalCurrencyText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/LocalCurrencyText"
        app:layout_constraintTop_toTopOf="@+id/LocalCurrencyText"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Rediscover"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:onClick="onRediscoverBlockchain"
        android:text="@string/rediscoverWalletTx"
        app:layout_constraintEnd_toEndOf="@+id/DeleteWalletButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/DeleteWalletButton"
        app:layout_constraintTop_toBottomOf="@+id/DeleteWalletButton" />

    <TextView
        android:id="@+id/wordSeed"
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textIsSelectable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/wordSeedTitle"
        app:layout_constraintTop_toBottomOf="@+id/wordSeedTitle" />

    <TextView
        android:id="@+id/wordSeedTitle"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginTop="32dp"
        android:text="@string/wordSeed"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/LocalCurrencyText"
        app:layout_constraintTop_toBottomOf="@+id/LocalCurrencyText" />

    <Button
        android:id="@+id/DumpInterestingData"
        android:layout_width="141dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="onLogDebugData"
        android:text="@string/logDebugData"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/DeleteWalletButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:onClick="onDeleteAccountButton"
        android:text="@string/deleteWalletAccount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wordSeed" />

    <Spinner
        android:id="@+id/deleteWalletAccountChoice"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/Rediscover"
        app:layout_constraintStart_toEndOf="@+id/DeleteWalletButton"
        app:layout_constraintTop_toTopOf="@+id/DeleteWalletButton" />

    <Switch
        android:id="@+id/GuiDeveloperView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GuiBchPreferNode" />

    <Switch
        android:id="@+id/GuiBchExclusiveNodeSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Rediscover" />

    <EditText
        android:id="@+id/GuiBchExclusiveNode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="bottom"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/GuiBchExclusiveNodeSwitch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <EditText
        android:id="@+id/GuiBchPreferNode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="bottom"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/GuiBchExclusiveNode" />

    <Switch
        android:id="@+id/GuiBchPreferNodeSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exclusiveBchNode"
        app:layout_constraintBottom_toBottomOf="@+id/GuiBchExclusiveNodeSwitch"
        app:layout_constraintStart_toEndOf="@+id/GuiBchExclusiveNodeSwitch"
        app:layout_constraintTop_toTopOf="@+id/GuiBchExclusiveNodeSwitch" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/preferBchNode"
        app:layout_constraintBottom_toBottomOf="@+id/GuiBchPreferNode"
        app:layout_constraintStart_toEndOf="@+id/GuiBchPreferNodeSwitch"
        app:layout_constraintTop_toTopOf="@+id/GuiBchPreferNode" />
</androidx.constraintlayout.widget.ConstraintLayout>