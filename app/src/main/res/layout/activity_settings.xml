<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".settings" android:tooltipText="@string/rediscoverTooltip"
        android:onClick="onRediscoverBlockchain">

    <TextView
            android:text="Local Currency"
            android:layout_width="179dp"
            android:layout_height="28dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/LocalCurrencyText" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Spinner
            android:layout_width="187dp"
            android:layout_height="25dp"
            android:id="@+id/fiatCurrencySpinner"
            app:layout_constraintTop_toTopOf="@+id/LocalCurrencyText"
            app:layout_constraintBottom_toBottomOf="@+id/LocalCurrencyText"
            app:layout_constraintStart_toEndOf="@+id/LocalCurrencyText" android:layout_marginStart="8dp"
            android:entries="@array/FiatCurrencyTypes"/>
    <Button
            android:text="@string/rediscoverWalletTx"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:id="@+id/Rediscover" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="onRediscoverBlockchain"/>

    <TextView
        android:id="@+id/wordSeed"
        android:layout_width="376dp"
        android:layout_height="117dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textIsSelectable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/wordSeedTitle"
        app:layout_constraintTop_toBottomOf="@+id/wordSeedTitle" />
    <TextView
            android:text="@string/wordSeed"
            android:layout_width="153dp"
            android:layout_height="25dp"
            android:id="@+id/wordSeedTitle" android:layout_marginTop="124dp"
            app:layout_constraintTop_toBottomOf="@+id/LocalCurrencyText"
            app:layout_constraintStart_toStartOf="@+id/LocalCurrencyText"/>

    <Button
        android:id="@+id/DumpInterestingData"
        android:layout_width="141dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:onClick="onLogDebugData"
        android:text="@string/logDebugData"
        app:layout_constraintBottom_toBottomOf="@+id/Rediscover"
        app:layout_constraintStart_toEndOf="@+id/Rediscover"
        app:layout_constraintTop_toTopOf="@+id/Rediscover"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/DeleteWalletButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:onClick="onDeleteAccountButton"
        android:text="@string/deleteWalletAccount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wordSeed" />

    <Spinner
        android:id="@+id/deleteWalletAccountChoice"
        android:layout_width="214dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/DeleteWalletButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toEndOf="@+id/DeleteWalletButton"
        app:layout_constraintTop_toTopOf="@+id/DeleteWalletButton"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>