<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onRediscoverBlockchain"
    android:tooltipText="@string/empty"
    tools:context=".settings">

    <TextView
        android:id="@+id/GuiShowDeveloperInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/enableDeveloperView"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/GuiDeveloperInfoSwitch"
        app:layout_constraintStart_toEndOf="@+id/GuiDeveloperInfoSwitch"
        app:layout_constraintTop_toTopOf="@+id/GuiDeveloperInfoSwitch"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/GuiLocalCurrencyText"
        android:layout_width="213dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/localCurrency"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/GuiFiatCurrencySpinner"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GuiGeneralSettingsHeader" />

    <Spinner
        android:id="@+id/GuiFiatCurrencySpinner"
        android:layout_width="113dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:entries="@array/FiatCurrencyTypes"
        app:layout_constraintBottom_toBottomOf="@+id/GuiLocalCurrencyText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/GuiLocalCurrencyText"
        app:layout_constraintTop_toTopOf="@+id/GuiLocalCurrencyText"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/GuiClearIdentityDomains"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:onClick="onClearIdentityDomains"
        android:text="@string/clearIdentityDomains"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GuiDeveloperInfoSwitch" />

    <Button
        android:id="@+id/GuiLogInterestingData"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:onClick="onLogDebugData"
        android:text="@string/logDebugData"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/GuiClearIdentityDomains"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/GuiClearIdentityDomains" />

    <Switch
        android:id="@+id/GuiDeveloperInfoSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="bottom"
        app:layout_constraintStart_toStartOf="@+id/GuiBchPreferNodeSwitch"
        app:layout_constraintTop_toBottomOf="@+id/GuiBchPreferNode" />

    <Switch
        android:id="@+id/GuiBchExclusiveNodeSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:gravity="bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GuiLocalCurrencyText" />

    <EditText
        android:id="@+id/GuiBchExclusiveNode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:gravity="bottom"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GuiBchExclusiveNodeSwitch" />

    <EditText
        android:id="@+id/GuiBchPreferNode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:gravity="bottom"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GuiBchPreferNodeSwitch" />

    <Switch
        android:id="@+id/GuiBchPreferNodeSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:gravity="bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GuiBchExclusiveNode" />

    <TextView
        android:id="@+id/GuiOnlyUseBCHNodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/exclusiveNexaNode"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/GuiBchExclusiveNodeSwitch"
        app:layout_constraintStart_toEndOf="@+id/GuiBchExclusiveNodeSwitch"
        app:layout_constraintTop_toTopOf="@+id/GuiBchExclusiveNodeSwitch"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/GuiPreferBchNodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/preferNexaNode"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/GuiBchPreferNodeSwitch"
        app:layout_constraintStart_toEndOf="@+id/GuiBchPreferNodeSwitch"
        app:layout_constraintTop_toTopOf="@+id/GuiBchPreferNodeSwitch" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConfirmationConstraint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GuiAccountSettingsHeader"
        tools:visibility="invisible">

        <Button
            android:id="@+id/buttonYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onYes"
            android:text="@string/yes"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonNo"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/GuiConfirmationText" />

        <Button
            android:id="@+id/buttonNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNo"
            android:text="@string/no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/buttonYes"
            app:layout_constraintTop_toBottomOf="@+id/GuiConfirmationText" />

        <TextView
            android:id="@+id/GuiConfirmationText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:maxLines="16"
            android:minLines="2"
            android:textIsSelectable="true"
            android:selectAllOnFocus="true"
            android:tooltipText="@string/empty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/confirmationOps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onConfirmationOps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GuiAccountSettingsHeader"
        tools:visibility="visible">

        <Spinner
            android:id="@+id/GuiSettingsAccountChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/GuiAssessUnconfirmedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onAssessUnconfirmedButton"
            android:text="@string/assessUnconfirmed"
            app:layout_constraintStart_toStartOf="@+id/GuiViewRecoveryPhraseButton"
            app:layout_constraintTop_toBottomOf="@+id/GuiViewRecoveryPhraseButton" />

        <Button
            android:id="@+id/GuiRediscoverButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRediscoverWallet"
            android:text="@string/rediscoverWalletTx"
            app:layout_constraintStart_toStartOf="@+id/GuiDeleteAccountButton"
            app:layout_constraintTop_toBottomOf="@+id/GuiAssessUnconfirmedButton" />

        <Button
            android:id="@+id/GuiRediscoverBlockchainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRediscoverBlockchain"
            android:text="@string/rediscoverBlockchain"
            app:layout_constraintStart_toStartOf="@+id/GuiDeleteAccountButton"
            app:layout_constraintTop_toBottomOf="@+id/GuiRediscoverButton" />

        <Button
            android:id="@+id/GuiDeleteAccountButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onDeleteAccountButton"
            android:text="@string/deleteWalletAccount"
            app:layout_constraintStart_toStartOf="@+id/GuiViewRecoveryPhraseButton"
            app:layout_constraintTop_toBottomOf="@+id/GuiRediscoverBlockchainButton" />

        <Button
            android:id="@+id/GuiViewRecoveryPhraseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="onViewRecoveryPhrase"
            android:text="@string/ViewRecoveryPhrase"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.336"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/GuiSettingsAccountChoice" />

        <Switch
            android:id="@+id/GuiPINInvisibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PinHidesAccount"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/GuiDeleteAccountButton"
            app:layout_constraintTop_toBottomOf="@+id/GuiDeleteAccountButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider6"
        android:layout_width="409dp"
        android:layout_height="3dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:background="?android:attr/listDivider"
        android:foreground="@color/listDividerFg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GuiClearIdentityDomains" />

    <View
        android:id="@+id/divider7"
        android:layout_width="409dp"
        android:layout_height="3dp"
        android:background="?android:attr/listDivider"
        android:foreground="@color/listDividerFg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/GuiGeneralSettingsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/GeneralSettings"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/GuiAccountSettingsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AccountSettings"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider6" />
</androidx.constraintlayout.widget.ConstraintLayout>