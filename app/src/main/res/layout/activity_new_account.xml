<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewAccount">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"/>

    <TextView
        android:id="@+id/GuiAccountNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:text="@string/AccountName"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/GuiAccountNameEntry"
        app:layout_constraintStart_toEndOf="@+id/GuiAccountNameOk"
        app:layout_constraintTop_toTopOf="@+id/GuiAccountNameEntry"
        app:layout_constraintVertical_bias="0.526" />

    <EditText
        android:id="@+id/GuiAccountNameEntry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/AccountNameHint"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/GuiAccountNameText"
        app:layout_constraintTop_toBottomOf="@+id/GuiNewAccountError" />

    <TextView
        android:id="@+id/GuiBlockchainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Blockchain"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/GuiBlockchainSelector"
        app:layout_constraintStart_toEndOf="@+id/GuiBlockchainOk"
        app:layout_constraintTop_toTopOf="@+id/GuiBlockchainSelector"
        app:layout_constraintVertical_bias="0.473" />

    <Spinner
        android:id="@+id/GuiBlockchainSelector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toEndOf="@+id/GuiBlockchainText"
        app:layout_constraintTop_toBottomOf="@+id/GuiAccountNameEntry" />

    <TextView
        android:id="@+id/GuiRecoveryPhraseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/AccountRecoveryPhrase"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/GuiBlockchainText"
        app:layout_constraintTop_toBottomOf="@+id/GuiBlockchainSelector" />

    <MultiAutoCompleteTextView
        android:id="@+id/GuiAccountRecoveryPhraseEntry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:hint="@string/LeaveEmptyNewWallet"
        android:imeOptions="actionDone"
        android:inputType="textLongMessage|textNoSuggestions"
        android:maxLines="5"
        android:minLines="2"
        android:singleLine="false"
        android:textAlignment="center"
        android:textSize="11sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GuiRecoveryPhraseText" />

    <Button
        android:id="@+id/GuiCreateAccountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="onCreateAccount"
        android:text="@string/createAccount"
        app:layout_constraintBottom_toTopOf="@+id/nav_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GuiNewAccountStatus"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/GuiAccountNameOk"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@android:string/ok"
        app:layout_constraintBottom_toBottomOf="@+id/GuiAccountNameText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/GuiAccountNameText"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageView
        android:id="@+id/GuiBlockchainOk"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@android:string/ok"
        app:layout_constraintBottom_toBottomOf="@+id/GuiBlockchainText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/GuiBlockchainText"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageView
        android:id="@+id/GuiRecoveryPhraseOk"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@android:string/ok"
        app:layout_constraintBottom_toBottomOf="@+id/GuiRecoveryPhraseText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/GuiRecoveryPhraseText"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageView
        android:id="@+id/guiPassPhraseOk"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@android:string/ok"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/GuiPassPhraseEntry"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_check" />

    <TextView
        android:id="@+id/GuiPassphraseText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/PassPhrase"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/guiPassPhraseOk"
        app:layout_constraintTop_toBottomOf="@+id/GuiAccountRecoveryPhraseEntry" />

    <EditText
        android:id="@+id/GuiPassPhraseEntry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="12"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GuiPassphraseText" />

    <TextView
        android:id="@+id/GuiNewAccountStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:maxLines="5"
        android:minLines="1"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GuiPassPhraseEntry" />

    <TextView
        android:id="@+id/GuiNewAccountError"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#F44336"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>