<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DomainIdentitySettings">

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu" android:layout_marginBottom="4dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:labelVisibilityMode="labeled">
    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <TextView
        android:id="@+id/domainName"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sw"
        android:layout_width="390dp"
        android:layout_height="493dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/sendButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/domainName"
        tools:context=".DomainIdentitySettings">

        <Switch
            android:id="@+id/uniqueIdentitySwitch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="14sp"
            android:switchMinWidth="64dp"
            android:text="@string/useUniqueIdentity"
            android:textSize="18sp"
            android:tooltipText="@string/useUniqueIdentityToolTip"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider3"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/uniqueIdentitySwitch" />

        <Switch
            android:id="@+id/provideSocialMedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:switchMinWidth="64dp"
            android:switchPadding="20dp"
            android:text="@string/provideSocialMedia"
            android:textSize="18sp"
            android:tooltipText="@string/provideSocialMediaToolTip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/provideEmail" />

        <Switch
            android:id="@+id/provideEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:switchMinWidth="64dp"
            android:text="@string/provideEmail"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/provideNameAlias" />

        <Switch
            android:id="@+id/provideBirthday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:switchMinWidth="64dp"
            android:text="@string/provideBirthday"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/provideRealName" />

        <Switch
            android:id="@+id/provideRealName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:checked="false"
            android:switchMinWidth="64dp"
            android:text="@string/provideRealName"
            android:textSize="18sp"
            android:tooltipText="@string/provideRealNameToolTip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider4" />

        <Switch
            android:id="@+id/providePhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:switchMinWidth="64dp"
            android:text="@string/providePhone"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.437"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/provideBirthday" />

        <Switch
            android:id="@+id/providePostalAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:checked="false"
            android:switchMinWidth="64dp"
            android:text="@string/providePostalAddress"
            android:textSize="18sp"
            android:tooltipText="@string/providePostalAddressToolTip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/provideBirthday" />

        <Switch
            android:id="@+id/provideBillingAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:switchMinWidth="64dp"
            android:text="@string/provideBillingAddress"
            android:textSize="18sp"
            android:tooltipText="@string/provideBillingAddressToolTip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/providePostalAddress"
            app:layout_constraintVertical_bias="0.092" />

        <View
            android:id="@+id/divider5"
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/provideBillingAddress" />

        <Switch
            android:id="@+id/provideAvatar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:switchMinWidth="64dp"
            android:text="@string/provideAvatar"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/provideSocialMedia" />

        <View
            android:id="@+id/divider4"
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/provideAvatar" />

        <Switch
            android:id="@+id/provideNameAlias"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:checked="true"
            android:switchMinWidth="64dp"
            android:text="@string/provideAlias"
            android:textSize="18sp"
            android:tooltipText="@string/provideAliasToolTip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider3" />

        <Switch
            android:id="@+id/provideAttestations"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:checked="false"
            android:switchMinWidth="64dp"
            android:text="@string/provideAttestations"
            android:textSize="18sp"
            android:tooltipText="@string/provideAttestationsToolTip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/sendButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingBottom="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nav_view"
        app:justifyContent="space_evenly"> <!-- or "space_between", "space_evenly" -->

        <Button
            android:id="@+id/RemoveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRemoveButton"
            android:text="@string/remove"
            />

        <Button
        android:id="@+id/NextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onDoneButton"
        android:text="@string/done"
        />

        <Button
            android:id="@+id/AcceptButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onAcceptButton"
            android:text="@string/accept"
            />

        <Button
            android:id="@+id/RejectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRemoveButton"
            android:text="@string/reject"
            />

    </com.google.android.flexbox.FlexboxLayout>


</androidx.constraintlayout.widget.ConstraintLayout>