<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IdentityActivity">

    <ImageView
        android:id="@+id/commonIdentityQRCode"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/commonIdentityQRCode"
        android:padding="0px"
        android:paddingStart="0px"
        android:paddingLeft="0px"
        android:paddingTop="0px"
        android:paddingEnd="0px"
        android:paddingRight="0px"
        android:paddingBottom="0px"
        android:scaleType="fitXY"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.965"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commonIdentityAddress"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/commonIdentityAddress"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:autoSizeMaxTextSize="26sp"
        android:autoSizeMinTextSize="8sp"
        android:autoSizeStepGranularity="1sp"
        android:autoSizeTextType="uniform"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onCommonIdentityAddrTextClicked"
        android:text="common identity address here"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameOrAliasInfo"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:autoSizeMaxTextSize="26sp"
        android:autoSizeMinTextSize="8sp"
        android:autoSizeStepGranularity="1sp"
        android:autoSizeTextType="uniform"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/UsernameOrAliasText"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/commonIdentityQRCode"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commonIdentityAddress" />

    <TextView
        android:id="@+id/emailInfo"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:autoSizeMaxTextSize="26sp"
        android:autoSizeMinTextSize="8sp"
        android:autoSizeStepGranularity="1sp"
        android:autoSizeTextType="uniform"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/EmailText"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/commonIdentityQRCode"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameOrAliasInfo" />

    <TextView
        android:id="@+id/socialMediaInfo"
        android:layout_width="224dp"
        android:layout_height="92dp"
        android:layout_marginTop="8dp"
        android:autoSizeMaxTextSize="26sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeStepGranularity="1sp"
        android:autoSizeTextType="uniform"
        android:clickable="true"
        android:gravity="center"
        android:maxLines="6"
        android:minLines="1"
        android:text="@string/SocialMediaText"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/commonIdentityQRCode"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailInfo" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu"
            app:labelVisibilityMode="labeled"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="407dp"
            android:layout_height="449dp"
            app:layout_constraintBottom_toTopOf="@+id/nav_view"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/identityList"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/commonIdentityQRCode"/>

</androidx.constraintlayout.widget.ConstraintLayout>