<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowSplashScreenBackground">@color/splashBackground</item>
        <!-- TODO make the splash screen appear right away item name="android:background">@drawable/splash</item -->
        <item name="android:background">@color/titleBackground</item>
        <item name="actionBarPopupTheme">@style/ActionBarOverflowMenu</item>
        <!-- item name="actionBarSize">32dp</item -->
        <item name="actionBarStyle">@style/WallyActionBarStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WallyActionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid">
    <item name="actionButtonStyle">@style/WallyActionButtonStyle</item>
</style>

    <style name="WallyActionButtonStyle" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:minWidth">12dp</item>
        <item name="android:maxWidth">14dp</item>
        <item name="android:minHeight">10dp</item>
    </style>

    <!-- style the overflow menu -->
    <style name="ActionBarOverflowMenu" parent="android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:background">@color/BrightBkg</item>
        <item name="android:colorForeground">@color/black</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AssetQuantityEdit">
        <item name="android:layout_marginVertical">0dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PositiveBalance">
        <item name="android:textColor">@color/colorCredit</item>
    </style>

    <style name="IdentityInfo" parent="WallyWSwirl">
    </style>

    <style name="ConfirmAction">
        <item name="android:textColor">@color/Confirm</item>
    </style>

    <style name="SoftKeyboardButton" parent="android:Widget.Button">
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:background">@drawable/soft_keyboard_button</item>
        <item name="android:paddingHorizontal">6dp</item>
    </style>

    <style name="WallyButton" parent="android:Widget.Button">
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:background">@drawable/wally_button</item>
        <item name="android:paddingHorizontal">6dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingVertical">3dp</item>
        <item name="android:layout_marginVertical">4dp</item>
    </style>
    <style name="WallyCardButton" parent="WallyButton">
        <item name="android:paddingHorizontal">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">1dp</item>
    </style>
    <style name="WallyButtonNoPad" parent="android:Widget.Button">
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:background">@drawable/wally_button</item>
        <item name="android:paddingHorizontal">6dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginVertical">0dp</item>
    </style>

    <style name="WallyNav" parent="android:Widget.Toolbar">
        <item name="android:background">@color/navBarBkg</item>
        <item name="android:foregroundTint">#f000f0</item>
        <item name="android:fadingEdge">none</item>
    </style>

    <style name="WallyBase" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/BaseBkg</item>
    </style>

    <style name="WallyWSwirl" parent="WallyBase">
        <item name="android:background">@drawable/w_background</item>
    </style>
    <style name="WallyWSwirlLight" parent="WallyBase">
        <item name="android:background">@drawable/light_w_background</item>
    </style>
    <style name="WallySwirl" parent="WallyBase">
        <item name="android:background">@drawable/swirl_background</item>
    </style>

</resources>
